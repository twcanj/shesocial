# SheSocial Environment Configuration
# Copy this file to .env for local development

# Server Configuration
NODE_ENV=development
PORT=10000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173

# Frontend Configuration (for Vite)
VITE_API_URL=http://localhost:10000/api
VITE_APP_ENV=development

# Production Environment Variables (Render.com)
# These will be set in Render.com dashboard:
# NODE_ENV=production
# PORT=10000
# JWT_SECRET=<auto-generated-by-render>
# CORS_ORIGIN=https://shesocial.tw
# CLIENT_URL=https://shesocial.tw
# VITE_API_URL=https://api.shesocial.tw/api
# VITE_APP_ENV=production